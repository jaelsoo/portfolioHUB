#include <stdio.h>
#include <stdlib.h>
#include <math.h>

float a, b, diag, area;

int main()
{
    printf("\nVamos calcular a area de um retangulo \nEntre com o numero do lado: ");
    scanf ("%f", &a );
    printf("\nEntre com o numero da base: ");
    scanf ("%f", &b );
    area = a*b;
    diag = sqrt( pow(a,2) + pow(b,2));
    printf("\n O valor da area do retangulo e: %f \n O valor da diagonal do retangulo e: %f", area, diag);
  
    system("PAUSE");
}
